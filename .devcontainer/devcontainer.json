{
  "name": "MAUI Linux Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "args": { "USERNAME": "${env:USER}" }
  },
  "workspaceFolder": "/mauienv",
  "workspaceMount": "source=${localWorkspaceFolder}/maui,target=/mauienv/maui,type=bind,consistency=cached",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-vscode.mono-debug",
        "eamodio.gitlens"
      ]
    }
  },
  "containerUser": "${env:USERNAME}"
}
